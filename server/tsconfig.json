{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,     
    "types": ["reflect-metadata", "jest"],
     "typeRoots": ["./types", "./node_modules/@types"]
  },
  "lib": ["es2015"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "./keys/*.ts"]
}
